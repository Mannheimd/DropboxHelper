<Window x:Class="DropboxHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DropboxHelper"
        mc:Ignorable="d"
        Title="DropboxHelper" Height="350" Width="525">
    <Window.Resources>
        <local:BoolToFileFolder_Converter x:Key="BoolToFileFolder_Converter"/>
    </Window.Resources>
    <Grid>
        <ListView x:Name="DropboxFolderContent" Margin="10,10,144.4,9.8">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Type" Width="100" DisplayMemberBinding="{Binding IsFile, Converter={StaticResource BoolToFileFolder_Converter}}"/>
                    <GridViewColumn Header="Name" Width="100" DisplayMemberBinding="{Binding Name}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Get Share Link" HorizontalAlignment="Left" Margin="379,10,0,0" VerticalAlignment="Top" Width="129" Click="GetShareLink_Button_Click"/>
    </Grid>
</Window>
